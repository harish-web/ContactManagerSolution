
@{
    
    if (ViewBag.CurrentSortBy == ViewBag.ColumnName && ViewBag.CurrentSortOrder == SortOrderOptions.ASC)
    {
        
        <a href="@(Url.Action("Index", "Persons", new {
                                            searchBy = ViewBag.CurrentSearchBy,
                                            searchString = ViewBag.CurrentSearchString,
                                            sortBy = ViewBag.ColumnName,
                                            sortOrder = SortOrderOptions.DESC}))">
            @ViewBag.DisplayName
        </a>
        <i class="fa-solid fa-sort-up"></i>
        
    }
    else if (ViewBag.CurrentSortBy == ViewBag.ColumnName && ViewBag.CurrentSortOrder == SortOrderOptions.DESC)
    {
        
        <a href="@(Url.Action("Index", "Persons", new {
                                            searchBy = ViewBag.CurrentSearchBy,
                                            searchString = ViewBag.CurrentSearchString,
                                            sortBy =ViewBag.ColumnName,
                                            sortOrder = SortOrderOptions.ASC}))">
            @ViewBag.DisplayName
        </a>
        <i class="fa-solid fa-sort-down"></i>
        
    }
    else
    {
      
        <a href="@(Url.Action("Index", "Persons", new {
                                            searchBy = ViewBag.CurrentSearchBy,
                                            searchString = ViewBag.CurrentSearchString,
                                            sortBy = ViewBag.ColumnName,
                                            sortOrder = SortOrderOptions.ASC}))">
            @ViewBag.DisplayName
        </a>
    
    }
    
  }


