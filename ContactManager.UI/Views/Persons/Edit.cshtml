@model PersonUpdateRequest
@{
    ViewBag.Title = "Edit Person";
}
<div class="flex">
    <div class="flex-1">
        <div class="text-grey">
            <span>Contacts</span>
            <i class="fa-solid fa-caret-right"></i>
            <span class="text-grey">Persons</span>
            <i class="fa-solid fa-caret-right"></i>
            <span class="text-grey">Edit</span>
        </div>
    </div>
</div>

<div class="form-container">
    <a asp-controller="persons" asp-action="Index" class="link-hover">Back To Persons list</a>
    <h2 class="text-large">Edit Person</h2>
    <form asp-controller = "persons" asp-action="Edit" method="post">
        <input type="hidden" asp-for="PersonID" />
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="PersonName" class="form-label pt">Perosn Name</label>
            </div>
            <div class="flex-1">
                <input asp-for="PersonName" class="form-input"/>
                <span asp-validation-for="PersonName" class="text-red"></span>
            </div>
        </div>
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Email" class="form-label pt">Email</label>
            </div>
            <div class="flex-1">
                <input type="email" asp-for="Email" class="form-input" />
                <span asp-validation-for="Email" class="text-red"></span>
            </div>
        </div>
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="DateOfBirth" class="form-label pt">Date of Birth</label>
            </div>
            <div class="flex-1">
                <input type="date" asp-for="DateOfBirth" class="form-input" />
                <span asp-validation-for="DateOfBirth" class="text-red"></span>
            </div>
        </div>
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Gender" class="form-label pt">Gender</label>
            </div>
            <div class="flex-1">
                @{
                    string[] genders = (string[])Enum.GetNames(typeof(GenderOptions));
                    for (int i = 0; i<genders.Count(); i++)
                    {

                        <input type="radio" asp-for="Gender" value="@genders[i]" />
                        <label asp-for="Gender">@genders[i]</label>
                    }
                }
                <span asp-validation-for="Gender" class="text-red"></span>

                @* <input type="radio" asp-for="Gender" value="Male"/>
                <label asp-for="Gender">Male</label>
                <input type="radio" asp-for="Gender" value="Female" />
                <label asp-for="Gender">Female</label>
                <input type="radio" asp-for="Gender" value="Other" />
                <label asp-for="Gender">Other</label> *@
            </div>
        </div>
        <div class="form-field flex">
            <div class="w-25">
                <label for="CountryID" class="form-label pt">Country</label>
            </div>
            <div class="flex-1">
                <select asp-for="CountryId" class="form-input">
                    <option>Please Select</option>
                    @foreach (CountryResponse countryRes in ViewBag.Countries)
                    {
                       <option value="@countryRes.CountryID" >@countryRes.CountryName</option>  
                    }
                    </select>
                <span asp-validation-for="CountryId" class="text-red"></span>
            </div>

        </div>
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Address" class="form-label pt">Address</label>
            </div>
            <div class="flex-1">
               <textarea asp-for="Address" class="form-input"
                   ></textarea>
            </div>
        </div>
        <div class="form-field flex">
            <div class="w-25">
            </div>
            <div class="flex-1">
                <input type="checkbox" asp-for=RecieveNewsLetter value="true" />
                <label asp-for="RecieveNewsLetter" class="form-label pt">ReceiveNewsLetters</label>
            </div>
        </div>
        <div class="form-field flex">
            <div class="w-25">
            </div>
            <div class="flex-1">
                <button type="submit" id="btnId" class="button button-green-back">Update</button>
                <div asp-validation-summary="All" class="text-red">

                </div>

              @*   @if(ViewBag.Errors != null)
                {
                    <div class="text-red ml">
                        <ul>
                        @foreach (var error in ViewBag.Errors)
                        {
                            <li class="ml">@error</li>
                        }
                        </ul>
                        </div>
                } *@
            </div>
        </div>

    </form>
</div>
